<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 class="newText">Please fill out the registration form</h1>
        <div class="formContainer">
            <form action="/register" method="POST">
                <div class="form-group">
                    <p class="newText">Username: </p><input class="form-control" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <p class="newText">Password: </p><input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Login</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>

