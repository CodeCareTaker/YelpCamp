<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="newText">Create a New Campground</h1>
        <div class="formContainer">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <p class="newText">Name of Campground: </p><input class="form-control" type="text" name="name" placeholder="name" required>
                </div>
                <div class="form-group">
                    <p class="newText">Image Location: </p><input class="form-control" type="text" name="image" placeholder="image url" required>
                </div>
                <div class="form-group">
                    <p class="newText">Name of Owner: </p><input class="form-control" type="text" name="ownerName" placeholder="Owner Name" required>
                </div>
                <div class="form-group">
                    <p class="newText">Campground Phone Number: </p><input class="form-control" type="text" name="phoneNumber" placeholder="Ex. 905-000-000" required>
                </div>
                <div class="form-group">
                    <p class="newText">Address Number: </p><input class="form-control" type="text" name="addressNumber" placeholder="Address Number" required>
                </div>
                <div class="form-group">
                    <p class="newText">Street Name: </p><input class="form-control" type="text" name="streetName" placeholder="Street Name" required>
                </div>
                <div class="form-group">
                    <p class="newText">City: </p><input class="form-control" type="text" name="city" placeholder="City" required>
                </div>
                <div class="form-group">
                    <p class="newText">Province: </p><input class="form-control" type="text" name="province" placeholder="Province" required>
                </div>
                <div class="form-group">
                    <p class="newText">Country: </p><input class="form-control" type="text" name="country" placeholder="Country" required>
                </div>
                <div class="form-group">
                    <p class="newText">Cost: </p><input class="form-control" type="number" name="price" placeholder="0.00" min="0.01" step="0.01" required>
                </div>
                <div class="form-group">
                    <p class="newText">Description: </p><input class="form-control" type="text" name="description" placeholder="description" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>