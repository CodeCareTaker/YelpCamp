<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;" class="newText">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <p class="newText">Campground Name: </p><input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <p class="newText">Image Location: </p><input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <p class="newText">Name of Owner: </p><input class="form-control" type="text" name="campground[ownerName]" value="<%= campground.ownerName %>">
                </div>
                <div class="form-group">
                    <p class="newText">Campground Phone Number: </p><input class="form-control" type="tel" name="campground[phoneNumber]" value="<%= campground.phoneNumber %>">
                </div>
                <div class="form-group">
                    <p class="newText">Address Number: </p><input class="form-control" type="text" name="campground[addressNumber]" value="<%= campground.addressNumber %>">
                </div>
                <div class="form-group">
                    <p class="newText">Street Name: </p><input class="form-control" type="text" name="campground[streetName]" value="<%= campground.streetName %>">
                </div>
                <div class="form-group">
                    <p class="newText">City: </p><input class="form-control" type="text" name="campground[city]" value="<%= campground.city %>">
                </div>
                <div class="form-group">
                    <p class="newText">Province: </p><input class="form-control" type="text" name="campground[province]" value="<%= campground.province %>">
                </div>
                <div class="form-group">
                    <p class="newText">Country: </p><input class="form-control" type="text" name="campground[country]" value="<%= campground.country %>">
                </div>
                <div class="form-group">
                    <p class="newText">Cost: </p><input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <p class="newText">Description: </p><input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds" class="newText">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>